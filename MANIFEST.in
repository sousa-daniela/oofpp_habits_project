# Include the README file for project description
include README.md

# Include all Python source files
global-include *.py

# Include the database directory and its contents
recursive-include database *

# Include all test files
recursive-include tests *

# Include all analytics and models files
recursive-include analytics *
recursive-include models *

# Exclude compiled Python files
global-exclude *.pyc

# Exclude all __pycache__ directories
prune **/__pycache__

# Exclude any unnecessary files (e.g., logs, temporary files)
global-exclude *.log